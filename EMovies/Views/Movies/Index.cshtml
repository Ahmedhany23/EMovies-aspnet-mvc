@using eMovies.Models;
@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card" style="width: 30rem;">
                <img src="@item.ImageURL" class="card-img-top" alt="@item.Name" style="max-height: 500px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><b>Cinema: </b>@item.Name</p>
                    <p class="card-text"><b>Category: </b>@item.MovieCategory</p>
                    <p class="card-text"><b>Start Date: </b>@item.StartDate.ToString("dd MMM yy")</p>
                    <p class="card-text"><b>End Date: </b>@item.EndDate.ToString("dd MMM yy")</p>
                    <p class="card-text">
                        <b>Status: </b>
                        @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                        {
                            <span class="badge bg-success text-white">AVAILABLE</span>
                        }
                        else if (DateTime.Now > item.EndDate)
                        {
                            <span class="badge bg-danger text-white">EXPIRED</span>
                        }
                        else
                        {
                            <span class="badge bg-primary text-white">UPCOMING</span>
                        }
                    </p>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary"><i class="bi bi-eye-fill"></i> Show Details</a>
                    <a href="#" class="btn btn-success"><i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))</a>
                </div>
            </div>
        </div>
    }
</div>